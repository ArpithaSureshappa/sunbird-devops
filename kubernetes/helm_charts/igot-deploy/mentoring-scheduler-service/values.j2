### Default variable file for lms-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ docker_hub_url }}


env:
  javaoptions: {{mentoring_scheduler_service_java_mem_limit|default('-Xmx4096m')}}

replicaCount: {{mentoring_scheduler_service_replicacount|default(1)}}
repository: {{ image_mentoring_scheduler_service }}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{mentoring_scheduler_service_cpu_req|default('100m')}}
    memory: {{mentoring_scheduler_service_mem_req|default('200Mi')}}
  limits:
    cpu: {{ mentoring_scheduler_service_cpu_limit|default('2')}}
    memory: {{mentoring_scheduler_service_mem_limit|default('1430Mi')}}
network:
  port: {{ service_mentoring_scheduler_service_port }}
  targetport: {{ service_mentoring_scheduler_service_port }}
strategy:
  type: RollingUpdate
  maxsurge: {{ lms_maxsurge|default('25%') }}
  maxunavailable: {{ lms_maxunavailable|default('25%') }}

environmentjs: |-
    API_DOC_URL= "/scheduler/api-doc"
    APPLICATION_BASE_URL= "/scheduler/"
    APPLICATION_PORT= "7401"
    DEFAULT_QUEUE= "email"
    DISABLE_LOG= "false"
    ERROR_LOG_LEVEL= "silly"
    KAFKA_URL= "{{ kafka_servers_list }}"
    MONGODB_URL= "mongodb://localhost:27018/tl-cron-rest"  ###not required
    NOTIFICATION_KAFKA_TOPIC= "{{ env }}.mentoring.notifications"
    REDIS_HOST= "{{ redis_host }}"
    REDIS_PORT= "{{ redis_port }}"
    ZEST_ENV= "ZEST_ENV"

serviceMonitor:
  enabled: true
  labels: # labels with which the prometheus choose the serviceMonitor
    app: prometheus-operator
    release: prometheus-operator

autoscaling:
  enabled: {{ mentoring-scheduler-service_autoscaling_enabled | default('false') }}
  minReplicas: {{ mentoring-scheduler-service_autoscaling_minReplicas|default(1) }}
  maxReplicas: {{ mentoring-scheduler-service_autoscaling_maxReplicas|default(2) }}
  targetCPUUtilizationPercentage: {{ mentoring-scheduler-service_autoscaling_targetCPUUtilizationPercentage|default(60) }}
  targetMemoryUtilizationPercentage: {{ mentoring-scheduler-service_autoscaling_targetMemoryUtilizationPercentage|default('') }}

